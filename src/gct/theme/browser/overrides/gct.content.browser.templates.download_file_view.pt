<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gct.content">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<tal:repeat repeat="brain view/fileBrains">

<div class="col-md-4 col-sm-6">
  <div class="product-item">
    <div class="product-image"> <a href="${python: brain.getObject().absolute_url()}/@@download/file"> 
         <img src="${python: brain.getObject().absolute_url()}/@@images/image" alt=""> </a>
    </div>
    <div class="product-item-details">
      <div class="product-item-name">
          <a href="${python: brain.getObject().absolute_url()}/@@download/file">
	  <p tal:define="size python:brain.getObject().file.size">
	        ${python: round(float(size) / (1024 * 1024), 1)}MB
          </p>
	  </a>
      </div>
      <div class="price-box"> <span class="price">${brain/Title}</span> </div>
    </div>
  </div>
</div>
</tal:repeat>


</metal:content-core>
</metal:content-core>

</body>
</html>
