<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gct.content">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<div class="shorting mb-30">
  <div class="row">
    <div class="col-md-6">
      <div class="view">
        <div class="list-types grid active "> <a href="shop.html">
          <div class="grid-icon list-types-icon"></div>
          </a> </div>
        <div class="list-types list"> <a href="shop-list.html">
          <div class="list-icon list-types-icon"></div>
          </a> </div>
      </div>
      <div class="short-by float-right-sm"> <span>Sort By</span>
        <div class="select-item">
          <select>
            <option value="" selected="selected">Name (A to Z)</option>
            <option value="">Name(Z - A)</option>
            <option value="">(low&gt;high)</option>
            <option value="">price(high &gt; low)</option>
          </select>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="show-item right-side float-left-sm"> <span>Show</span>
        <div class="select-item">
          <select>
            <option value="" selected="selected">24</option>
            <option value="">12</option>
            <option value="">6</option>
          </select>
        </div>
        <span>Per Page</span>
        <div class="compare float-right-sm"> <a href="#" class="btn btn-color">Compare (0)</a> </div>
      </div>
    </div>
  </div>
</div>

  <metal:listingmacro define-macro="listing">
    <tal:results define="batch view/batch;">
      <tal:listing condition="batch">
        <div class="entries" metal:define-slot="entries"
            tal:define="portal context/@@plone_portal_state/portal;
                        image_scale portal/@@image_scale">
          <tal:repeat repeat="item batch" metal:define-macro="entries">
            <tal:block tal:define="obj item/getObject;
                item_url item/getURL;
                item_title item/Title;
                item_type item/PortalType;
                item_link python:item_type in view.use_view_action and item_url+'/view' or item_url;
                ">
              <metal:block define-slot="entry">
                <div class="col-md-4 col-sm-6"> 
                  <div tal:condition="python:item_type == 'Product'" class="product-item" tal:attributes="title item_type">
                    <div class="product-image  text-center">
                      <a tal:attributes="href item_link;"
                         tal:condition="item/cover">
                         <img tal:attributes="src string:${item_url}/@@images/cover/thumb"/>
                      </a>
                    </div>
                    <div class="product-item-details">
                      <div>
                        <a tal:attributes="href item_link;
                                              title item_type"
                           tal:content="item_title">
                        </a>
                      </div>
                      <div>
                        <a tal:attributes="href item_link;
                                           title item_type"
                           tal:content="item/modelNo">
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </metal:block>
            </tal:block>
          </tal:repeat>
        </div>
        
        <div class="row">
          <div class="col-xs-12">
            <div class="pagination-bar">
              <div class="pagination-bar" metal:use-macro="context/batch_macros/macros/navigation" />
            </div>
          </div>
        </div>
      </tal:listing>

      <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
            tal:condition="not: view/batch"
            tal:content="view/no_items_message">
          There are currently no items in this folder.
        </p>
      </metal:empty>

    </tal:results>
  </metal:listingmacro>


</metal:content-core>
</metal:content-core>

</body>
</html>
